server {
        listen 80;
        listen [::]:80;

        root /var/www/{{ GB_WEB_SITE }}/html;
        index index.html index.htm index.nginx-debian.html;

        server_name {{ GB_WEB_SITE }} www.{{ GB_WEB_SITE }};

        location = /notes {
          proxy_pass http://127.0.0.1:5000;
        }
        location ^~ /comment/ {
          proxy_pass http://127.0.0.1:5000;
        }
        location ^~ /note {
          proxy_pass http://127.0.0.1:5000;
        }
}
